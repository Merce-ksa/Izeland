mixin box(image, title, content)
	.content_box
		.box_image: img(src=image)
		.box_content
			h1=title
			p=content

-var title = ["Capítol 1: Vol a Twelville", "Capítol 2: La coreografia", "Capítol 3: Dotzè aniversari"]
-var chapter1pdf = ["pdf/mm1-1-1cat.pdf", "pdf/mm1-1-2cat.pdf", "pdf/mm1-1-3cat.pdf"]
-var chapter2pdf = ["pdf/mm1-2-1cat.pdf", "pdf/mm1-2-2cat.pdf", "pdf/mm1-2-3cat.pdf"]
-var chapter3pdf = ["pdf/mm1-3-1cat.pdf", "pdf/mm1-3-2cat.pdf", "pdf/mm1-3-3cat.pdf"]
-var partsChapter1 = ["1.1. Embarcant", "1.2. Un passatger molt pelut", "1.3. Cursa entre avions"]
-var partsChapter2 = ["2.1. Embarcant", "2.2. Un passatger molt pelut", "2.3. Cursa entre avions"]
-var partsChapter3 = ["3.1. Embarcant", "3.2. Un passatger molt pelut", "3.3. Cursa entre avions"]

mixin chapterBox(image, title, link1, link2, link3, part1, part2, part3)
	.chapter_box
		.chapter_image
			img(src=image, alt="Chapter image")
		.chapter_content
			p.subtitle=title
			ul
				li
					a(href=link1)=part1
				li
					a(href=link2)=part2
				li
					a(href=link3)=part3